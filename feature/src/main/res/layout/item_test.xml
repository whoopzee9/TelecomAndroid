<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_16"
    android:layout_marginVertical="@dimen/dp_8"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:background="@color/background_primary"
    android:elevation="@dimen/dp_4"
    app:cardElevation="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_test__tv_text"
            style="@style/TextView.Default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_24"
            android:paddingVertical="@dimen/dp_16"
            tools:text="@tools:sample/cities" />

        <ProgressBar
            android:id="@+id/item_test__pb_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:indeterminateTint="@color/button_tint_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/item_test__iv_download"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/ic_download_24"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_8"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>